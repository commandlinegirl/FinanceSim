<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddInvestmentSavAcct">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">    
    
    <TextView
        android:text="@string/investmentsav_name_input"                        
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dip" />        
    
    <EditText
        android:id="@+id/investmentsav_name"   
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/investmentsav_name_text"
        android:inputType="textCapSentences" />

    <TextView
        android:text=""                        
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>     
        
</LinearLayout>        
    
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">        
    
    <TextView
        android:text="@string/investmentsav_init_amount_input"                
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dip" />
    
    <EditText
        android:id="@+id/investmentsav_init_amount"   
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/investmentsav_init_amount_text"        
        android:inputType="numberDecimal" />

    <TextView
        android:text=""                        
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>         
            
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">        
    
    <TextView
        android:text="@string/investmentsav_interest_rate_input"                
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dip" />
    
    <EditText
        android:id="@+id/investmentsav_interest_rate"   
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/investmentsav_interest_rate_text"        
        android:inputType="numberDecimal" />

    <TextView
        android:text="@string/percent"                        
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>                     
</LinearLayout>    

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">        
    
    <TextView
        android:text="@string/investmentsav_tax_rate_input"                
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="3dip" />
    
    <EditText
        android:id="@+id/investmentsav_tax_rate"   
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/investmentsav_tax_rate_text"        
        android:inputType="numberDecimal" />

    <TextView
        android:text="@string/percent"                        
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>         
        
</LinearLayout>   
   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">    
        
    <TextView
        android:text="@string/investmentsav_percontrib_input"                        
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"        
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="6dip"
        android:paddingBottom="6dip" />        
    
    <EditText
        android:id="@+id/investmentsav_percontrib"   
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/investmentsav_percontrib_text"
        android:inputType="numberDecimal" />

    <TextView
        android:text="%"                        
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>        
    
</LinearLayout> 

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">    
        
    <TextView
        android:text="@string/investmentsav_capitalization_input"                        
        android:layout_weight="@integer/form_text_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="6dip"
        android:paddingBottom="6dip" />        
      
    <Spinner android:id="@+id/investmentsav_capitalization"          
        android:layout_height="wrap_content"
        android:layout_weight="@integer/form_edit_weight"
        android:layout_width="0dp" />        
    
        <TextView
        android:text=""
        android:layout_weight="@integer/form_suffix_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>         
    
</LinearLayout>       


    
    <LinearLayout 
        android:id="@+id/submitInvestmentButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"          
        android:gravity="center"        
        android:orientation="horizontal">
    
    <Button        
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="@string/cancel"
            android:background="@drawable/button_cancel"                
            android:layout_marginRight="2dp"             
            android:onClick="cancelAdding"/>     

    <Button
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="@string/add_investmentsav"
            android:background="@drawable/button_green"                        
            android:layout_marginLeft="2dp"           
            android:onClick="addInvestment" /> 
     </LinearLayout>
</LinearLayout>
</ScrollView>