<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FrgCashflow"
    android:id="@+id/frg_cashflow" >
      
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/cashflows1">       
    </TextView>
    
    <ImageView	           
        android:layout_height="180dp"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cashflows"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/cashflows2">       
    </TextView>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
         <TextView 
            android:id="@+id/show_chart"
            android:gravity="center"            
            android:textSize="10sp"
            android:layout_height="32dp"
            android:layout_weight="1"               
            android:layout_width="0dp"
            android:layout_marginRight="2dip"
            android:clickable="true"
            android:text="@string/view_chart"
            android:background="@drawable/button_green"
            android:onClick="showChart"/>
        
        <TextView 
            android:id="@+id/show_table"
            android:textSize="10sp"
            android:gravity="center"            
            android:layout_height="32dp"
            android:layout_weight="1"               
            android:layout_width="0dp"
            android:layout_marginLeft="2dip"
            android:clickable="true"
            android:text="@string/view_table"
            android:background="@drawable/button_green" 
            android:onClick="showTable"/> 
    </LinearLayout>
    
</LinearLayout>
