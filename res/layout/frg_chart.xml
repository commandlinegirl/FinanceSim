<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FrgChart"
    android:id="@+id/frg_chart" >
      
    <LinearLayout
        android:id="@+id/predNumYears"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:background="#FFFFFFFF">
        
         <TextView
             android:id="@+id/predText"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="2"
             android:text="Years: "
             android:layout_gravity="center"
             android:layout_margin="10dip">
         </TextView>
         <TextView
             android:id="@+id/pred1"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1"
             android:text="1"
             android:paddingTop="10dip"
             android:paddingBottom="10dip"
             android:paddingLeft="13dip"
             android:paddingRight="13dip" 
             android:gravity="center"
             android:clickable="true"
             android:onClick="pred1yrs"
             android:background="@drawable/pred_years">             
         </TextView>
         <TextView
             android:id="@+id/pred5"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1"
             android:text="5"
             android:paddingTop="10dip"
             android:paddingBottom="10dip"
             android:paddingLeft="13dip"
             android:paddingRight="13dip"                    
             android:gravity="center"   
             android:clickable="true"
             android:onClick="pred5yrs"
             android:background="@drawable/pred_years">
         </TextView>
         <TextView
             android:id="@+id/pred10"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1"
             android:text="10"
             android:padding="10dip"                         
             android:gravity="center"
             android:clickable="true"
             android:onClick="pred10yrs"
             android:background="@drawable/pred_years">             
         </TextView>
         <TextView
             android:id="@+id/pred20"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1"
             android:text="20"
             android:padding="10dip"
             android:gravity="center"
             android:clickable="true"
             android:onClick="pred20yrs"
             android:background="@drawable/pred_years">
         </TextView>
         <TextView
             android:id="@+id/pred30"             
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1"
             android:text="30"
             android:padding="10dip"
             android:gravity="center"
             android:clickable="true"
             android:onClick="pred30yrs"             
             android:background="@drawable/pred_years">                         
         </TextView>    
     </LinearLayout>
  
        
     <LinearLayout
        android:id="@+id/pred_chart"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:background="@drawable/chart_bkg">
     </LinearLayout>                                       
</LinearLayout>
