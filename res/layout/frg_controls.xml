<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal" 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"        
        tools:context=".FrgControls">
        
        <TextView 
            android:id="@+id/show_chart"
            android:text="@string/chartControl"
            android:gravity="center"            
            android:textSize="10sp"
            android:layout_height="32dp"
            android:layout_weight="1"               
            android:layout_width="0dp"
            android:layout_marginRight="4dip"
            android:layout_marginLeft="4dip"
            android:clickable="true"
            android:background="@drawable/controls"
            android:onClick="pickControl"/>
        
        <TextView 
            android:id="@+id/show_table"
            android:text="@string/tableControl"
            android:textSize="10sp"
            android:gravity="center"            
            android:layout_height="32dp"
            android:layout_weight="1"               
            android:layout_width="0dp"
            android:layout_marginLeft="4dip"
            android:clickable="true"
            android:background="@drawable/controls" 
            android:onClick="pickControl"/>                
                
</LinearLayout>